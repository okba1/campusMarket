<!doctype html>
<html>
    <head>
        <title>Products list</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    </head>
    <body>

        <% include intern_menu.ejs %>
        <div class="container">
            <div class="row">
                <div class="page-header col-sm-6" style="border-right:1px solid #ddd;">
                    <h1>Vente</h1>
                    <hr>
                    <% for(var i=0; i<products.length; i++) { %>
                        <% if (products[i].toSell) { %>
                            <div class="col-sm-12">
                                <div class="well">
                                    <%= products[i].title %><br>
                                    <%= products[i].description %><br>
                                    <form method='POST' action='deleteProduct'>
                                        <input type='hidden' name='productId' value='<%=products[i]._id%>'/>
                                        <button class="btn btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        <% } %> <!-- end if -->      
                    <% } %> <!-- end for -->
                </div>

                <div class="page-header col-sm-6">
                    <h1>Achat</h1>
                    <hr>
                    <% for(var i=0; i<products.length; i++) { %>
                        <% if (products[i].toSell == false) { %>
                            <div class="col-sm-12">
                                <div class="well">
                                    <%= products[i].title %><br>
                                    <%= products[i].description %><br>
                                    <form method='POST' action='deleteProduct'>
                                        <input type='hidden' name='productId' value='<%=products[i]._id%>'/>
                                        <button class="btn btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        <% } %> <!-- end if -->      
                    <% } %> <!-- end for -->
                </div>

            </div>
        </div>



        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
        <script type="text/javascript">
        $('.delete').click(function(e){
            console.log(this.id);
            $.ajax({
                url: 'deleteProduct',
                method: 'DELETE',
                dataType: 'JSON',
                data: {'productId' : this.id}, 
                success : function(data){ // code_html contient le HTML renvoy√©
                    console.log("Product deleted with success");
                    console.log("ok");
                },
                error : function(resultat, statut, erreur){
                    console.log("error");
                },
            });
        })
        </script>
    </body>
</html>