<!doctype html>
<html>
<head>
    <title>Products list</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
   
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">CampusMarket</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="/addproduct">Add Product</a></li>
                <li><a href="/getProducts">All Products</a></li>
                <li class="active"><a href="/myProducts">My Products<span class="sr-only">(current)</span></a></li>
              </ul>

                <a href="/logout" class="btn btn-danger navbar-right">Logout</a>
          
             
            </div>
        </div>    
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>A Vendre</h1>
             
                
                        <% for(var i=0; i<products.length; i++) { %>
                        <% if (products[i].toSell) {%>
                        <div class="well">
                            <%= products[i].title %>
                            <%= products[i].description %><br>
                            <button class="showEmail" id="<%= products[i].userId %>">Show Email</button>
                            <div id="mail<%= products[i].userId %>"></div>
                        </div>
                        <% } %>
                        <% } %>
                    

            </div>
            <div class="col-sm-6">
                <h1>A Acheter</h1>
                 <% for(var i=0; i<products.length; i++) { %>
                 <% if (products[i].toSell == false) { %>
                <div class="well">

                    <%= products[i].title %>
                    <%= products[i].description %>
   
                </div>
                <% } %>
                <% } %>
            </div>
    </div>

</div>
 <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
 <script type="text/javascript">
    $('.showEmail').click(function(e){
        $.ajax({
            url: 'showEmail',
            method: 'GET',
            dataType: 'JSON',
            data: {'ownerId' : this.id}, 
            success : function(data){ // code_html contient le HTML renvoy√©
                console.log("#mail" + this.id);
                $("#mail"+data.id).text(data.email);
            },
            error : function(resultat, statut, erreur){
                console.log("error");
            },
        });
    })
 </script>
</body>
</html>